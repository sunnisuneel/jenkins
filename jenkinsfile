pipeline{
    agent { label 'dev' }
    stages { 
        stage('vcs') {
           steps {
            git 'https://github.com/wakaleo/game-of-life.git'

           }
        }
        stage ('build') {
            steps {
                sh 'export PATH="/usr/lib/jvm/java-1.8.0-openjdk-amd64/bin:$PATH" && mvn package'
            }
        }
        stage ('postbuild') {
            steps {
                 archiveArtifacts artifacts: '**/target/gameoflife.war', 
                  junit '**/surefire-reports/TEST-*.xml'
        
        
            }

        }


     }
}